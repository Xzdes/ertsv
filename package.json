{
  "name": "ertsv-app",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build:main": "esbuild src/main/index.ts src/preload/index.ts --bundle --platform=node --outdir=dist",
    "watch:main": "npm run build:main -- --watch",
    "dev:vite": "vite",
    "start:electron": "node start.cjs",
    "dev": "concurrently -k \"npm:watch:main\" \"npm:dev:vite\" \"npm:start:electron\""
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.0",
    "electron": "^31.2.1",
    "esbuild": "^0.23.0",
    "typescript": "^5.4.5",
    "vite": "^7.0.6",
    "wait-on": "^7.2.0"
  }
}