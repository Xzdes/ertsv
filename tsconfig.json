{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src", // ★★★ ГЛАВНОЕ ИЗМЕНЕНИЕ: Указываем корень исходников ★★★
    "baseUrl": ".",
    "paths": {
      // Пути остаются для удобства разработки в VS Code
      "@renderer/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/main/**/*.ts",
    "src/preload/**/*.ts",
    "src/ertsv/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/renderer"
  ]
}